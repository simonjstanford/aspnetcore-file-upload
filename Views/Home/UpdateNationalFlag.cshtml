@model MyWebApp.Models.Country

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <h1>Update National Flag</h1>
    @using (Html.BeginForm(FormMethod.Post, htmlAttributes: new { enctype = "multipart/form-data" }))
    {
        //The unique ID of the country must be sent back to the server
        <input type="hidden" name="code" value="@Model.Code" />
        <b>Code:</b><span>@Model.Code</span><br />
        <b>Name:</b><span>@Model.Name</span><br />
        <b>Continent:</b><span>@Model.Continent</span><br />
        <b>Choose Local File:</b>
        <input type="file" name="nationalFlagFile" /> <br />
        <input type="submit" value="Update" /> <br />
    }
</body>
</html>